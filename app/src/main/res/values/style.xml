<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Init -->
    <style name="init_tv_title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- Login Style -->
    <style name="login_title_1">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/primary_01</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="login_title_2">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Init Style -->
    <style name="init_title">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- Home Style -->
    <style name="tv_guide_location">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="home_location">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="home_content">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="home_content_black">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#313131</item>
    </style>

    <style name="commend_item_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#313131</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- Commend Style -->
    <style name="commend_title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/primary_01</item>
    </style>

    <style name="commend_tomorrow">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- MyPage Style -->
    <style name="mypage_user_name">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- MyPage Style -->
    <style name="mypage_system_settings">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--  ImageView Style  -->
    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize15Percent" parent="">
        <item name="cornerSize">25%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize10Percent" parent="">
        <item name="cornerSize">10%</item>
    </style>

    <!-- dialog -->
    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.Material3">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>
    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">8dp</item>
    </style>

    <!-- TextInputLayoutStyle -->
    <style name="CustomTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">32dp</item>
        <item name="boxCornerRadiusBottomStart">32dp</item>
        <item name="boxCornerRadiusTopEnd">32dp</item>
        <item name="boxCornerRadiusTopStart">32dp</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeColor">@color/primary_01</item>
        <item name="boxStrokeErrorColor">@color/error</item>
        <item name="hintTextColor">@color/text_hint</item>
        <item name="errorTextColor">@color/error</item>
        <item name="errorEnabled">true</item>
    </style>

    <!-- spinner -->
    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/spinner_dropdown</item>
        <item name="android:popupBackground">@color/custom_spinner_dropdown_background</item>
        <item name="android:textColor">@color/custom_spinner_text_color</item>
    </style>

</resources>